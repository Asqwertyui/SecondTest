<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/dl" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ks.secondtest.Second">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tl"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv"
                android:src="@drawable/lib_icon_tab2_normal"/>
        </android.support.v7.widget.Toolbar>
        <android.support.v4.view.ViewPager
            android:layout_above="@id/tab"
            android:layout_below="@id/tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0d"
            android:id="@+id/vp"/>
        <android.support.design.widget.TabLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tab"
            app:tabSelectedTextColor="#0ff"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabBackground="@color/colorPrimary"/>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/head"
        app:menu="@menu/mymenu"
        android:background="#ff0"
        app:itemBackground="@color/cardview_shadow_start_color"
        />
</android.support.v4.widget.DrawerLayout>
